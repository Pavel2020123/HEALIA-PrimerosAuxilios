<UserControl x:Class="GUI.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <UserControl.Resources>

        <!-- ✨ SCROLLBAR AZUL -->
        <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="#20FFFFFF" CornerRadius="5" Opacity="0.2"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Border CornerRadius="5" Opacity="0.8">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#2196F3" Offset="0"/>
                                                            <GradientStop Color="#1976D2" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#2196F3" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                                    </Border.Effect>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Opacity" Value="1"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🎨 BOTONES ICONOS AZULES -->
        <Style x:Key="ModernIconButton" TargetType="Button">
            <Setter Property="Background" Value="#1E2A3A"/>
            <Setter Property="Foreground" Value="#B4B7C0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                BorderThickness="1"
                                BorderBrush="#40FFFFFF">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2196F3" Offset="0"/>
                                <GradientStop Color="#1976D2" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0D47A1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ⭐ BOTÓN NUEVA CONVERSACIÓN AZUL -->
        <Style x:Key="NewConversationButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="20" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2196F3" Offset="0"/>
                                    <GradientStop Color="#1976D2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#2196F3" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="20" FontWeight="Bold" 
                                         Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="20" Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1976D2" Offset="0"/>
                                            <GradientStop Color="#0D47A1" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#2196F3" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                                    </Border.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="+" FontSize="20" FontWeight="Bold" 
                                                 Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 🚀 BOTÓN ENVIAR AZUL -->
        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="52"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="26">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2196F3" Offset="0"/>
                                    <GradientStop Color="#1976D2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#2196F3" BlurRadius="20" ShadowDepth="0" Opacity="0.7"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#2196F3" BlurRadius="30" ShadowDepth="0" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🎤 TEMPLATE MENSAJE DE AUDIO -->
        <DataTemplate x:Key="AudioMessageTemplate">
            <Grid Margin="16,8" Opacity="0">
                <Grid.RenderTransform>
                    <TranslateTransform Y="30"/>
                </Grid.RenderTransform>
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                               From="0" To="1" Duration="0:0:0.5"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                                               From="30" To="0" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Grid.Triggers>

                <StackPanel HorizontalAlignment="Right" MaxWidth="300">
                    <Border CornerRadius="20,20,4,20" Padding="12,10">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#25D366" Offset="0"/>
                                <GradientStop Color="#128C7E" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#128C7E" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
                        </Border.Effect>

                        <StackPanel Orientation="Horizontal">
                            <Border Width="36" Height="36" CornerRadius="18" Background="#0D7A6D"
                                    Margin="0,0,10,0" VerticalAlignment="Center">
                                <Path Data="M12 14c1.66 0 2.99-1.34 2.99-3L15 5c0-1.66-1.34-3-3-3S9 3.34 9 5v6c0 1.66 1.34 3 3 3z"
                                      Fill="White" Stretch="Uniform" Width="18"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                                <Rectangle Width="3" Height="12" Fill="White" Margin="2" RadiusX="1.5" RadiusY="1.5" Opacity="0.8"/>
                                <Rectangle Width="3" Height="20" Fill="White" Margin="2" RadiusX="1.5" RadiusY="1.5" Opacity="0.9"/>
                                <Rectangle Width="3" Height="16" Fill="White" Margin="2" RadiusX="1.5" RadiusY="1.5" Opacity="0.8"/>
                                <Rectangle Width="3" Height="24" Fill="White" Margin="2" RadiusX="1.5" RadiusY="1.5"/>
                                <Rectangle Width="3" Height="18" Fill="White" Margin="2" RadiusX="1.5" RadiusY="1.5" Opacity="0.9"/>
                                <Rectangle Width="3" Height="14" Fill="White" Margin="2" RadiusX="1.5" RadiusY="1.5" Opacity="0.8"/>
                            </StackPanel>

                            <TextBlock VerticalAlignment="Center" Foreground="White" FontSize="13" FontWeight="Medium">
                                <Run Text="0:"/>
                                <Run Text="{Binding AudioDurationSeconds, StringFormat='{}{0:D2}'}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,16,0">
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                                 Foreground="#808080" FontSize="11" Margin="0,0,6,0"/>
                        <TextBlock Text="✓✓" Foreground="#00D26A" FontSize="12" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- 💬 TEMPLATE MENSAJE ENVIADO - AZUL -->
        <DataTemplate x:Key="BurbujaEnviadaTemplate">
            <Grid Margin="16,8" Opacity="0">
                <Grid.RenderTransform>
                    <TranslateTransform Y="30"/>
                </Grid.RenderTransform>
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                                               From="30" To="0" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Grid.Triggers>

                <StackPanel HorizontalAlignment="Right" MaxWidth="500">
                    <Border CornerRadius="20,20,4,20" Padding="18,12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#42A5F5" Offset="0"/>
                                <GradientStop Color="#2196F3" Offset="0.5"/>
                                <GradientStop Color="#1976D2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#2196F3" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                        </Border.Effect>
                        <TextBlock Text="{Binding Contenido}" Foreground="White" TextWrapping="Wrap"
                                 FontSize="14" LineHeight="22" FontWeight="Medium"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,16,0">
                        <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                                 Foreground="#808080" FontSize="11" Margin="0,0,6,0"/>
                        <TextBlock Text="✓✓" Foreground="#00D26A" FontSize="12" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- 🤖 TEMPLATE MENSAJE RECIBIDO - AZUL -->
        <DataTemplate x:Key="BurbujaRecibidaTemplate">
            <Grid Margin="16,8" Opacity="0">
                <Grid.RenderTransform>
                    <TranslateTransform Y="30"/>
                </Grid.RenderTransform>
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.5"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                                               From="30" To="0" Duration="0:0:0.5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Grid.Triggers>

                <StackPanel HorizontalAlignment="Left" MaxWidth="500">
                    <Grid Margin="0,0,0,8">
                        <Border Width="42" Height="42" CornerRadius="21" HorizontalAlignment="Left">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2196F3" Offset="0"/>
                                    <GradientStop Color="#1976D2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#2196F3" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <TextBlock Text="🤖" FontSize="22" HorizontalAlignment="Center" 
                                     VerticalAlignment="Center" Margin="0,2,0,0"/>
                        </Border>
                    </Grid>

                    <Border Background="#1E2A3A" CornerRadius="20,20,20,4" Padding="18,12"
                            BorderThickness="1" BorderBrush="#40FFFFFF">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                        </Border.Effect>
                        <TextBlock Text="{Binding Contenido}" Foreground="#E8E8E8" TextWrapping="Wrap"
                                 FontSize="14" LineHeight="22"/>
                    </Border>

                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" Foreground="#808080"
                             FontSize="11" Margin="16,4,0,0" HorizontalAlignment="Left"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!-- ⏳ TEMPLATE TYPING INDICATOR - AZUL -->
        <DataTemplate x:Key="TypingIndicatorTemplate">
            <Grid Margin="16,8">
                <StackPanel HorizontalAlignment="Left" MaxWidth="500">
                    <Grid Margin="0,0,0,8">
                        <Border Width="42" Height="42" CornerRadius="21" HorizontalAlignment="Left">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#2196F3" Offset="0"/>
                                    <GradientStop Color="#1976D2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#2196F3" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <TextBlock Text="🤖" FontSize="22" HorizontalAlignment="Center" 
                                     VerticalAlignment="Center" Margin="0,2,0,0"/>
                        </Border>
                    </Grid>

                    <Border Background="#1E2A3A" CornerRadius="20,20,20,4" Padding="20,14"
                            BorderThickness="1" BorderBrush="#40FFFFFF">
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                       From="0.7" To="1" Duration="0:0:1" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <StackPanel Orientation="Horizontal" Height="24">
                            <Ellipse Width="10" Height="10" Margin="3">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2196F3" Offset="0"/>
                                        <GradientStop Color="#1976D2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                               From="0.3" To="1" Duration="0:0:0.6" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <Ellipse Width="10" Height="10" Margin="3">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2196F3" Offset="0"/>
                                        <GradientStop Color="#1976D2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                               From="0.3" To="1" Duration="0:0:0.6"
                                                               BeginTime="0:0:0.2" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <Ellipse Width="10" Height="10" Margin="3">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2196F3" Offset="0"/>
                                        <GradientStop Color="#1976D2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                               From="0.3" To="1" Duration="0:0:0.6"
                                                               BeginTime="0:0:0.4" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <local:ChatMessageTemplateSelector x:Key="NuestroSelectorDeBurbujas"
                                           SentTemplate="{StaticResource BurbujaEnviadaTemplate}"
                                           ReceivedTemplate="{StaticResource BurbujaRecibidaTemplate}"
                                           TypingTemplate="{StaticResource TypingIndicatorTemplate}"
                                           AudioTemplate="{StaticResource AudioMessageTemplate}"/>

    </UserControl.Resources>

    <!-- 🌌 GRID PRINCIPAL CON FONDO AZUL -->
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0A1929" Offset="0"/>
                <GradientStop Color="#1A2332" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ✨ HEADER AZUL -->
        <Border Grid.Row="0" BorderThickness="0,0,0,2" CornerRadius="0,0,15,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1565C0" Offset="0"/>
                    <GradientStop Color="#0D47A1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#42A5F5" Offset="0"/>
                    <GradientStop Color="#2196F3" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <DropShadowEffect Color="#2196F3" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="50" Height="50" CornerRadius="25">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2196F3" Offset="0"/>
                                <GradientStop Color="#1976D2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#2196F3" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>
                        <TextBlock Text="🤖" FontSize="28" HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" Margin="0,3,0,0"/>
                    </Border>

                    <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="HEALIA AI Assistant" Foreground="White" 
                                 FontSize="18" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <Ellipse Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,6,0">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#00D26A" Offset="0"/>
                                        <GradientStop Color="#00FF7F" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#00D26A" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock x:Name="StatusText" Text="Conectado - Claude AI" 
                                     Foreground="#00D26A" FontSize="13"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="2" x:Name="NewConversationButton"
                        Style="{StaticResource NewConversationButtonStyle}"
                        Content="Nueva Conversación" Click="NewConversationButton_Click"
                        ToolTip="Iniciar una nueva conversación" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- 💬 ÁREA DE MENSAJES -->
        <Grid Grid.Row="1" Background="Transparent">
            <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" Padding="8">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}"/>
                </ScrollViewer.Resources>
                <ItemsControl x:Name="ChatMessagesList" Margin="12,16,12,24"
                              ItemTemplateSelector="{StaticResource NuestroSelectorDeBurbujas}" />
            </ScrollViewer>
        </Grid>

        <!-- ⌨️ ÁREA DE INPUT AZUL -->
        <Border Grid.Row="2" BorderThickness="0,2,0,0" Padding="20,16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1565C0" Offset="0"/>
                    <GradientStop Color="#0D47A1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#42A5F5" Offset="0"/>
                    <GradientStop Color="#2196F3" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Effect>
                <DropShadowEffect Color="#2196F3" BlurRadius="15" ShadowDepth="-2" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button x:Name="AttachFileButton" Grid.Column="0" Style="{StaticResource ModernIconButton}" 
                        Margin="0,0,8,0" Click="AttachFileButton_Click"
                        ToolTip="Subir imagen para análisis con Claude Vision">
                    <Path Data="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                          Stretch="Uniform" Width="20"/>
                </Button>

                <Button x:Name="RecordAudioButton" Grid.Column="1" Style="{StaticResource ModernIconButton}" 
                        Margin="0,0,12,0" ToolTip="Mantén presionado para grabar audio">
                    <Path Data="M12 14c1.66 0 2.99-1.34 2.99-3L15 5c0-1.66-1.34-3-3-3S9 3.34 9 5v6c0 1.66 1.34 3 3 3zm5.3-3c0 3-2.54 5.1-5.3 5.1S6.7 14 6.7 11H5c0 3.41 2.72 6.23 6 6.72V21h2v-3.28c3.28-.48 6-3.3 6-6.72h-1.7z"
                          Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" 
                          Stretch="Uniform" Width="20"/>
                </Button>

                <Border Grid.Column="2" Background="#1E2A3A" CornerRadius="24" Margin="0,0,12,0" 
                        BorderThickness="2">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#40FFFFFF" Offset="0"/>
                            <GradientStop Color="#20FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Grid>
                        <TextBox x:Name="MessageTextBox" MinHeight="44" MaxHeight="140" Padding="20,12"
                                 BorderThickness="0" Background="Transparent" Foreground="#E8E8E8"
                                 CaretBrush="#2196F3" VerticalAlignment="Center" AcceptsReturn="True"
                                 TextWrapping="Wrap" FontSize="14" TextChanged="MessageTextBox_TextChanged"/>

                        <TextBlock Text="Escribe tu mensaje..." Foreground="#707070" FontSize="14"
                                   IsHitTestVisible="False" Margin="20,12" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=MessageTextBox, Path=Text}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <Button x:Name="SendButton" Grid.Column="3" Style="{StaticResource SendButtonStyle}"
                        Click="SendButton_Click" IsEnabled="False">
                    <Path Data="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"
                          Fill="White" Stretch="Uniform" Width="22" Margin="4,0,0,0"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
