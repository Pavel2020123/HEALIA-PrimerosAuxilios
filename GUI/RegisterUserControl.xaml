<UserControl x:Class="GUI.RegisterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="900" Height="600">

    <UserControl.Resources>
        <!-- Animación de entrada -->
        <Storyboard x:Key="EnterAnimation">
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="0.8" To="1" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="0.8" To="1" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>

        <!-- Animación de partículas -->
        <Storyboard x:Key="ParticleAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Particle1"
                           Storyboard.TargetProperty="Opacity"
                           From="0.1" To="0.3" Duration="0:0:4"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Particle2"
                           Storyboard.TargetProperty="Opacity"
                           From="0.2" To="0.4" Duration="0:0:5"
                           AutoReverse="True" BeginTime="0:0:1"/>
        </Storyboard>

        <!-- Animación de brillo -->
        <Storyboard x:Key="ShineAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ShineTransform"
                           Storyboard.TargetProperty="X"
                           From="-200" To="600" Duration="0:0:3"
                           BeginTime="0:0:2"/>
        </Storyboard>

        <!-- ✨ NUEVA: Animación de ondas -->
        <Storyboard x:Key="WaveAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Wave1"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1" To="1.5" Duration="0:0:3"/>
            <DoubleAnimation Storyboard.TargetName="Wave1"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1" To="1.5" Duration="0:0:3"/>
            <DoubleAnimation Storyboard.TargetName="Wave1"
                           Storyboard.TargetProperty="Opacity"
                           From="0.5" To="0" Duration="0:0:3"/>

            <DoubleAnimation Storyboard.TargetName="Wave2"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1" To="1.5" Duration="0:0:3"
                           BeginTime="0:0:1"/>
            <DoubleAnimation Storyboard.TargetName="Wave2"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1" To="1.5" Duration="0:0:3"
                           BeginTime="0:0:1"/>
            <DoubleAnimation Storyboard.TargetName="Wave2"
                           Storyboard.TargetProperty="Opacity"
                           From="0.5" To="0" Duration="0:0:3"
                           BeginTime="0:0:1"/>
        </Storyboard>

        <!-- ✨ NUEVA: Animación de pulso del icono -->
        <Storyboard x:Key="IconPulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="IconScale"
                           Storyboard.TargetProperty="ScaleX"
                           From="1" To="1.1" Duration="0:0:1.5"
                           AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="IconScale"
                           Storyboard.TargetProperty="ScaleY"
                           From="1" To="1.1" Duration="0:0:1.5"
                           AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource EnterAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ParticleAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ShineAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource WaveAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource IconPulseAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Contenedor principal -->
    <Border x:Name="MainBorder" 
            CornerRadius="15" 
            Background="White"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="60" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== PANEL IZQUIERDO - BRANDING ========== -->
            <Border Grid.Column="0" 
                    CornerRadius="15,0,0,15"
                    ClipToBounds="True">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0F2027" Offset="0"/>
                        <GradientStop Color="#203A43" Offset="0.5"/>
                        <GradientStop Color="#2C5364" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Partículas animadas -->
                    <Ellipse x:Name="Particle1" 
                             Width="300" Height="300"
                             Fill="#00D4FF"
                             Opacity="0.1"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="-100,-50,0,0">
                        <Ellipse.Effect>
                            <BlurEffect Radius="80"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <Ellipse x:Name="Particle2" 
                             Width="250" Height="250"
                             Fill="#0099FF"
                             Opacity="0.15"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Bottom"
                             Margin="0,0,-80,-80">
                        <Ellipse.Effect>
                            <BlurEffect Radius="60"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <!-- Efecto de brillo -->
                    <Rectangle Width="100" Height="700" Opacity="0.1">
                        <Rectangle.RenderTransform>
                            <TranslateTransform x:Name="ShineTransform" X="-200"/>
                        </Rectangle.RenderTransform>
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="Transparent" Offset="0"/>
                                <GradientStop Color="White" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <!-- Contenido -->
                    <StackPanel VerticalAlignment="Center" 
                              HorizontalAlignment="Center"
                              Margin="40">

                        <!-- ✨ Icono de registro con ondas animadas -->
                        <Grid Width="200" Height="200" Margin="0,0,0,30">
                            <!-- Ondas expandiéndose -->
                            <Ellipse x:Name="Wave1"
                                   Width="140" Height="140"
                                   Stroke="#00D4FF"
                                   StrokeThickness="3"
                                   Opacity="0"
                                   RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <Ellipse x:Name="Wave2"
                                   Width="140" Height="140"
                                   Stroke="#0099FF"
                                   StrokeThickness="3"
                                   Opacity="0"
                                   RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <!-- Icono principal -->
                            <Border Width="140" Height="140"
                                    Background="White"
                                    CornerRadius="70"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="IconScale" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <DropShadowEffect Color="#00D4FF" BlurRadius="50" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <Grid>
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#00B4DB" Offset="0"/>
                                                <GradientStop Color="#0083B0" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="📝" 
                                             FontSize="60" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Título -->
                        <TextBlock Text="¡Únete a Nosotros!"
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,10">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#00D4FF" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- Línea decorativa -->
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,25">
                            <Ellipse Width="8" Height="8" Fill="#00D4FF" Margin="0,0,5,0"/>
                            <Rectangle Height="2" Width="150">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00D4FF" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </StackPanel>

                        <!-- Beneficios -->
                        <StackPanel>
                            <!-- Beneficio 1 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Background="#00D4FF33" 
                                      CornerRadius="8"
                                      Width="35" Height="35"
                                      Margin="0,0,15,0">
                                    <TextBlock Text="✓" 
                                             FontSize="20" 
                                             FontWeight="Bold"
                                             Foreground="#00D4FF"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Acceso completo al sistema"
                                         FontSize="14"
                                         Foreground="#B0E0FF"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Beneficio 2 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Background="#00D4FF33" 
                                      CornerRadius="8"
                                      Width="35" Height="35"
                                      Margin="0,0,15,0">
                                    <TextBlock Text="✓" 
                                             FontSize="20" 
                                             FontWeight="Bold"
                                             Foreground="#00D4FF"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Gestión de emergencias"
                                         FontSize="14"
                                         Foreground="#B0E0FF"
                                         VerticalAlignment="Center"/>
                            </StackPanel>

                            <!-- Beneficio 3 -->
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#00D4FF33" 
                                      CornerRadius="8"
                                      Width="35" Height="35"
                                      Margin="0,0,15,0">
                                    <TextBlock Text="✓" 
                                             FontSize="20" 
                                             FontWeight="Bold"
                                             Foreground="#00D4FF"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Soporte 24/7"
                                         FontSize="14"
                                         Foreground="#B0E0FF"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== PANEL DERECHO - FORMULARIO ========== -->
            <Grid Grid.Column="1">
                <!-- Patrón de fondo -->
                <Border CornerRadius="0,15,15,0" Opacity="0.02">
                    <Border.Background>
                        <DrawingBrush Viewport="0,0,20,20" ViewportUnits="Absolute" TileMode="Tile">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing Brush="#00D4FF">
                                    <GeometryDrawing.Geometry>
                                        <EllipseGeometry Center="10,10" RadiusX="1" RadiusY="1"/>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Border.Background>
                </Border>

                <!-- Botón cerrar -->
                <Button x:Name="CloseButton"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="35" Height="35"
                        Margin="0,15,15,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Panel.ZIndex="10"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="17.5">
                                            <TextBlock Text="✕" 
                                                     FontSize="18" 
                                                     FontWeight="Bold"
                                                     Foreground="#CCCCCC"
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF0F0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Formulario con scroll -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                            Margin="45,20,45,20">
                    <StackPanel>

                        <!-- Título -->
                        <StackPanel Margin="0,15,0,25">
                            <TextBlock Text="Crear Cuenta"
                                     FontSize="28"
                                     FontWeight="Bold"
                                     Foreground="#1A1A1A"
                                     Margin="0,0,0,5"/>
                            <Rectangle Width="60" Height="4" 
                                     HorizontalAlignment="Left"
                                     Margin="0,0,0,8">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00B4DB" Offset="0"/>
                                        <GradientStop Color="#00D4FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock Text="Completa el formulario para empezar"
                                     FontSize="13"
                                     Foreground="#999999"/>
                        </StackPanel>

                        <!-- Nombre completo -->
                        <TextBlock Text="NOMBRE COMPLETO"
                                 FontSize="10"
                                 FontWeight="Bold"
                                 Foreground="#666666"
                                 Margin="0,0,0,8"/>
                        <Border BorderThickness="0,0,0,2"
                                Margin="0,0,0,15"
                                Background="Transparent">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#00D4FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#F0F8FF" 
                                        CornerRadius="8"
                                        Padding="8"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="👤" FontSize="18"/>
                                </Border>
                                <TextBox x:Name="FullNameTextBox"
                                       Grid.Column="1"
                                       Height="38"
                                       VerticalContentAlignment="Center"
                                       FontSize="14"
                                       BorderThickness="0"
                                       Background="Transparent"
                                       Foreground="#1A1A1A"/>
                            </Grid>
                        </Border>

                        <!-- Usuario -->
                        <TextBlock Text="USUARIO"
                                 FontSize="10"
                                 FontWeight="Bold"
                                 Foreground="#666666"
                                 Margin="0,0,0,8"/>
                        <Border BorderThickness="0,0,0,2"
                                Margin="0,0,0,15"
                                Background="Transparent">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#00D4FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#F0F8FF" 
                                        CornerRadius="8"
                                        Padding="8"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="@" FontSize="18" FontWeight="Bold"/>
                                </Border>
                                <TextBox x:Name="UsernameTextBox"
                                       Grid.Column="1"
                                       Height="38"
                                       VerticalContentAlignment="Center"
                                       FontSize="14"
                                       BorderThickness="0"
                                       Background="Transparent"
                                       Foreground="#1A1A1A"/>
                            </Grid>
                        </Border>

                        <!-- Email -->
                        <TextBlock Text="CORREO ELECTRÓNICO"
                                 FontSize="10"
                                 FontWeight="Bold"
                                 Foreground="#666666"
                                 Margin="0,0,0,8"/>
                        <Border BorderThickness="0,0,0,2"
                                Margin="0,0,0,15"
                                Background="Transparent">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#00D4FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#F0F8FF" 
                                        CornerRadius="8"
                                        Padding="8"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="✉" FontSize="18"/>
                                </Border>
                                <TextBox x:Name="EmailTextBox"
                                       Grid.Column="1"
                                       Height="38"
                                       VerticalContentAlignment="Center"
                                       FontSize="14"
                                       BorderThickness="0"
                                       Background="Transparent"
                                       Foreground="#1A1A1A"/>
                            </Grid>
                        </Border>

                        <!-- Contraseña -->
                        <TextBlock Text="CONTRASEÑA"
                                 FontSize="10"
                                 FontWeight="Bold"
                                 Foreground="#666666"
                                 Margin="0,0,0,8"/>
                        <Border BorderThickness="0,0,0,2"
                                Margin="0,0,0,15"
                                Background="Transparent">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#00D4FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#F0F8FF" 
                                        CornerRadius="8"
                                        Padding="8"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="🔒" FontSize="18"/>
                                </Border>
                                <PasswordBox x:Name="PasswordBox"
                                           Grid.Column="1"
                                           Height="38"
                                           VerticalContentAlignment="Center"
                                           FontSize="14"
                                           BorderThickness="0"
                                           Background="Transparent"
                                           Foreground="#1A1A1A"/>
                            </Grid>
                        </Border>

                        <!-- Confirmar Contraseña -->
                        <TextBlock Text="CONFIRMAR CONTRASEÑA"
                                 FontSize="10"
                                 FontWeight="Bold"
                                 Foreground="#666666"
                                 Margin="0,0,0,8"/>
                        <Border BorderThickness="0,0,0,2"
                                Margin="0,0,0,20"
                                Background="Transparent">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#00D4FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#F0F8FF" 
                                        CornerRadius="8"
                                        Padding="8"
                                        Margin="0,0,12,0">
                                    <TextBlock Text="🔐" FontSize="18"/>
                                </Border>
                                <PasswordBox x:Name="ConfirmPasswordBox"
                                           Grid.Column="1"
                                           Height="38"
                                           VerticalContentAlignment="Center"
                                           FontSize="14"
                                           BorderThickness="0"
                                           Background="Transparent"
                                           Foreground="#1A1A1A"/>
                            </Grid>
                        </Border>

                        <!-- Botón Registrarse -->
                        <Button x:Name="RegisterButton"
                              Height="48"
                              FontSize="13"
                              FontWeight="Bold"
                              Foreground="White"
                              BorderThickness="0"
                              Cursor="Hand"
                              Margin="0,0,0,20"
                              Click="RegisterButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" CornerRadius="10">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#00B4DB" Offset="0"/>
                                                            <GradientStop Color="#0083B0" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#00B4DB" BlurRadius="25" ShadowDepth="0" Opacity="0.5"/>
                                                    </Border.Effect>
                                                    <Grid>
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"
                                                                        Margin="0,0,30,0"/>
                                                        <TextBlock Text="→" 
                                                                 FontSize="20" 
                                                                 FontWeight="Bold"
                                                                 HorizontalAlignment="Right"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,20,0"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="border"
                                                                                   Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                   To="1.03" Duration="0:0:0.2"/>
                                                                    <DoubleAnimation Storyboard.TargetName="border"
                                                                                   Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                   To="1.03" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="border"
                                                                                   Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                   To="1" Duration="0:0:0.2"/>
                                                                    <DoubleAnimation Storyboard.TargetName="border"
                                                                                   Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                                                   To="1" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Content" Value="CREAR CUENTA"/>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Ya tienes cuenta -->
                        <Border Background="#F8FCFF" 
                                CornerRadius="10" 
                                Padding="12,10"
                                BorderThickness="1"
                                BorderBrush="#E0F2FF"
                                Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal"
                                      HorizontalAlignment="Center">
                                <TextBlock Text="¿Ya tienes cuenta? "
                                         FontSize="13"
                                         Foreground="#666666"
