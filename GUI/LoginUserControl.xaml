<UserControl x:Class="GUI.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="900" Height="550">

    <UserControl.Resources>
        <!-- Animación de entrada espectacular -->
        <Storyboard x:Key="EnterAnimation">
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="0.8" To="1" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="0.8" To="1" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>

        <!-- Animación sutil para el logo -->
        <Storyboard x:Key="LogoFloatAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LogoTransform"
                           Storyboard.TargetProperty="Y"
                           From="0" To="-15" Duration="0:0:3"
                           AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Rotación suave del logo -->
        <Storyboard x:Key="LogoRotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LogoRotate"
                           Storyboard.TargetProperty="Angle"
                           From="0" To="360" Duration="0:0:20"/>
        </Storyboard>

        <!-- Animación de partículas en el fondo -->
        <Storyboard x:Key="ParticleAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Particle1"
                           Storyboard.TargetProperty="Opacity"
                           From="0.1" To="0.3" Duration="0:0:4"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Particle2"
                           Storyboard.TargetProperty="Opacity"
                           From="0.2" To="0.4" Duration="0:0:5"
                           AutoReverse="True" BeginTime="0:0:1"/>
            <DoubleAnimation Storyboard.TargetName="Particle3"
                           Storyboard.TargetProperty="Opacity"
                           From="0.15" To="0.35" Duration="0:0:6"
                           AutoReverse="True" BeginTime="0:0:2"/>
        </Storyboard>

        <!-- Animación de brillo en movimiento -->
        <Storyboard x:Key="ShineAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ShineTransform"
                           Storyboard.TargetProperty="X"
                           From="-200" To="600" Duration="0:0:3"
                           BeginTime="0:0:2"/>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource EnterAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource LogoFloatAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource LogoRotateAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ParticleAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ShineAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Contenedor principal -->
    <Border x:Name="MainBorder" 
            CornerRadius="15" 
            Background="White"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="60" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== PANEL IZQUIERDO - BRANDING ========== -->
            <Border Grid.Column="0" 
                    CornerRadius="15,0,0,15"
                    ClipToBounds="True">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0F2027" Offset="0"/>
                        <GradientStop Color="#203A43" Offset="0.5"/>
                        <GradientStop Color="#2C5364" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Partículas de fondo animadas -->
                    <Ellipse x:Name="Particle1" 
                             Width="300" Height="300"
                             Fill="#00D4FF"
                             Opacity="0.1"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="-100,-50,0,0">
                        <Ellipse.Effect>
                            <BlurEffect Radius="80"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <Ellipse x:Name="Particle2" 
                             Width="250" Height="250"
                             Fill="#0099FF"
                             Opacity="0.15"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Bottom"
                             Margin="0,0,-80,-80">
                        <Ellipse.Effect>
                            <BlurEffect Radius="60"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <Ellipse x:Name="Particle3" 
                             Width="200" Height="200"
                             Fill="#66D4FF"
                             Opacity="0.2"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="100,0,0,0">
                        <Ellipse.Effect>
                            <BlurEffect Radius="70"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <!-- Efecto de brillo animado -->
                    <Rectangle Width="100" Height="600" Opacity="0.1">
                        <Rectangle.RenderTransform>
                            <TranslateTransform x:Name="ShineTransform" X="-200"/>
                        </Rectangle.RenderTransform>
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="Transparent" Offset="0"/>
                                <GradientStop Color="White" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <!-- Patrón de puntos decorativos -->
                    <Canvas>
                        <Ellipse Width="3" Height="3" Fill="#00D4FF" Opacity="0.3" Canvas.Left="50" Canvas.Top="80"/>
                        <Ellipse Width="4" Height="4" Fill="#0099FF" Opacity="0.4" Canvas.Left="120" Canvas.Top="150"/>
                        <Ellipse Width="2" Height="2" Fill="#66D4FF" Opacity="0.3" Canvas.Left="200" Canvas.Top="100"/>
                        <Ellipse Width="3" Height="3" Fill="#00D4FF" Opacity="0.5" Canvas.Left="280" Canvas.Top="200"/>
                        <Ellipse Width="2" Height="2" Fill="#0099FF" Opacity="0.3" Canvas.Left="150" Canvas.Top="300"/>
                        <Ellipse Width="4" Height="4" Fill="#66D4FF" Opacity="0.4" Canvas.Left="250" Canvas.Top="400"/>
                        <Ellipse Width="3" Height="3" Fill="#00D4FF" Opacity="0.3" Canvas.Left="80" Canvas.Top="450"/>
                    </Canvas>

                    <!-- Contenido del panel -->
                    <StackPanel VerticalAlignment="Center" 
                              HorizontalAlignment="Center"
                              Margin="40">

                        <!-- Logo contenedor con doble borde -->
                        <Grid Width="200" Height="200" Margin="0,0,0,30">
                            <!-- Borde exterior con brillo -->
                            <Border Width="200" Height="200"
                                    CornerRadius="25"
                                    Background="Transparent"
                                    BorderThickness="3"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <RotateTransform x:Name="LogoRotate" Angle="0"/>
                                </Border.RenderTransform>
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#00D4FF" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                        <GradientStop Color="#0099FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                            </Border>

                            <!-- Logo contenedor interno -->
                            <Border Width="180" Height="180"
                                    Background="White"
                                    CornerRadius="20"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="LogoTransform" Y="0"/>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <DropShadowEffect Color="#00D4FF" BlurRadius="50" ShadowDepth="0" Opacity="0.5"/>
                                </Border.Effect>

                                <Grid>
                                    <!-- Fondo sutil con gradiente -->
                                    <Border CornerRadius="20">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#E8F4F8" Offset="0"/>
                                                <GradientStop Color="#FFFFFF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <!-- Tu logo aquí -->
                                    <Image Source="{StaticResource Logo_1}"
                                           Stretch="Uniform"
                                           Margin="20"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Título con efecto -->
                        <TextBlock Text="Primeros Auxilios"
                                 FontSize="36"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,5">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#00D4FF" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- Subtítulo animado -->
                        <Border CornerRadius="15" 
                                Background="#00000033" 
                                Padding="15,5"
                                Margin="0,5,0,25">
                            <TextBlock Text="Sistema de Gestión Médica"
                                     FontSize="13"
                                     Foreground="#B0E0FF"
                                     HorizontalAlignment="Center"
                                     FontWeight="SemiBold"/>
                        </Border>

                        <!-- Línea decorativa mejorada -->
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,25">
                            <Ellipse Width="8" Height="8" Fill="#00D4FF" Margin="0,0,5,0"/>
                            <Rectangle Height="2" Width="150">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00D4FF" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </StackPanel>

                        <!-- Texto motivacional -->
                        <TextBlock Text="&quot;Salvando vidas, un clic a la vez&quot;"
                                 FontSize="15"
                                 FontStyle="Italic"
                                 Foreground="#8CC9E8"
                                 TextAlignment="Center"
                                 TextWrapping="Wrap"
                                 LineHeight="22"
                                 MaxWidth="300"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== PANEL DERECHO - FORMULARIO ========== -->
            <Grid Grid.Column="1">
                <!-- Patrón de fondo sutil -->
                <Border CornerRadius="0,15,15,0" Opacity="0.02">
                    <Border.Background>
                        <DrawingBrush Viewport="0,0,20,20" ViewportUnits="Absolute" TileMode="Tile">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing Brush="#00D4FF">
                                    <GeometryDrawing.Geometry>
                                        <EllipseGeometry Center="10,10" RadiusX="1" RadiusY="1"/>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Border.Background>
                </Border>

                <!-- Botón cerrar profesional -->
                <Button x:Name="CloseButton"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="35" Height="35"
                        Margin="0,15,15,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Panel.ZIndex="10"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="17.5">
                                            <TextBlock Text="✕" 
                                                     FontSize="18" 
                                                     FontWeight="Bold"
                                                     Foreground="#CCCCCC"
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF0F0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Formulario centrado -->
                <StackPanel VerticalAlignment="Center"
                          Margin="45,30,45,30">

                    <!-- Bienvenida con acento -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="¡Bienvenido!"
                                 FontSize="28"
                                 FontWeight="Bold"
                                 Foreground="#1A1A1A"
                                 Margin="0,0,0,5"/>
                        <Rectangle Width="60" Height="4" 
                                 HorizontalAlignment="Left"
                                 Margin="0,0,0,8">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#00B4DB" Offset="0"/>
                                    <GradientStop Color="#00D4FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="Inicia sesión para continuar"
                                 FontSize="13"
                                 Foreground="#999999"/>
                    </StackPanel>

                    <!-- Campo Usuario con efecto -->
                    <TextBlock Text="USUARIO"
                             FontSize="10"
                             FontWeight="Bold"
                             Foreground="#666666"
                             Margin="0,0,0,8"/>

                    <Border x:Name="UserBorder"
                            BorderThickness="0,0,0,2"
                            Margin="0,0,0,20"
                            Background="Transparent">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#00D4FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="#F0F8FF" 
                                    CornerRadius="8"
                                    Padding="8"
                                    Margin="0,0,12,0">
                                <TextBlock Text="👤"
                                         FontSize="18"
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBox x:Name="UsernameTextBox"
                                   Grid.Column="1"
                                   Height="40"
                                   VerticalContentAlignment="Center"
                                   FontSize="15"
                                   BorderThickness="0"
                                   Background="Transparent"
                                   Foreground="#1A1A1A"
                                   FontWeight="Medium"/>
                        </Grid>
                    </Border>

                    <!-- Campo Contraseña con efecto -->
                    <TextBlock Text="CONTRASEÑA"
                             FontSize="10"
                             FontWeight="Bold"
                             Foreground="#666666"
                             Margin="0,0,0,8"/>

                    <Border BorderThickness="0,0,0,2"
                            Margin="0,0,0,15"
                            Background="Transparent">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="BorderBrush" Value="#00D4FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Background="#F0F8FF" 
                                    CornerRadius="8"
                                    Padding="8"
                                    Margin="0,0,12,0">
                                <TextBlock Text="🔒"
                                         FontSize="18"
                                         VerticalAlignment="Center"/>
                            </Border>
                            <PasswordBox x:Name="PasswordBox"
                                       Grid.Column="1"
                                       Height="40"
                                       VerticalContentAlignment="Center"
                                       FontSize="15"
                                       BorderThickness="0"
                                       Background="Transparent"
                                       Foreground="#1A1A1A"/>
                        </Grid>
                    </Border>

                    <!-- Olvidaste contraseña -->
                    <TextBlock HorizontalAlignment="Right" Margin="0,0,0,20">
                        <Hyperlink x:Name="ForgotPasswordLink"
                                 Click="ForgotPasswordLink_Click"
                                 TextDecorations="None">
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Setter Property="Foreground" Value="#00A3CC"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#00D4FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                            <Run Text="¿Olvidaste tu contraseña?" FontSize="12" FontWeight="SemiBold"/>
                        </Hyperlink>
                    </TextBlock>

                    <!-- Botón Iniciar Sesión mejorado -->
                    <Button x:Name="LoginButton"
                          Height="48"
                          FontSize="13"
                          FontWeight="Bold"
                          Foreground="White"
                          BorderThickness="0"
                          Cursor="Hand"
                          Margin="0,0,0,20"
                          Click="LoginButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Border x:Name="border"
                                                      CornerRadius="10">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#00B4DB" Offset="0"/>
                                                            <GradientStop Color="#0083B0" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#00B4DB" BlurRadius="25" ShadowDepth="0" Opacity="0.5"/>
                                                    </Border.Effect>
                                                    <Grid>
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"
                                                                        Margin="0,0,30,0"/>
                                                        <TextBlock Text="→" 
                                                                 FontSize="20" 
                                                                 FontWeight="Bold"
                                                                 HorizontalAlignment="Right"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,20,0"/>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="border"
                                                                               Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                                               To="1.03" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="border"
                                                                               Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                                               To="1.03" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="border"
                                                                               Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                                               To="1" Duration="0:0:0.2"/>
                                                                <DoubleAnimation Storyboard.TargetName="border"
                                                                               Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                                               To="1" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Content" Value="INICIAR SESIÓN"/>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Línea separadora mejorada -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Height="1" Fill="#E0E0E0" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <Border Grid.Column="1" 
                                Background="#F5F5F5" 
                                CornerRadius="10"
                                Padding="10,5">
                            <TextBlock Text="o" FontSize="11" Foreground="#999999" FontWeight="SemiBold"/>
                        </Border>
                        <Rectangle Grid.Column="2" Height="1" Fill="#E0E0E0" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </Grid>

                    <!-- Registrarse mejorado -->
                    <Border Background="#F8FCFF" 
                            CornerRadius="10" 
                            Padding="12,10"
                            BorderThickness="1"
                            BorderBrush="#E0F2FF">
                        <StackPanel Orientation="Horizontal"
                                  HorizontalAlignment="Center">
                            <TextBlock Text="¿No tienes cuenta? "
                                     FontSize="13"
                                     Foreground="#666666"
                                     VerticalAlignment="Center"/>
                            <TextBlock VerticalAlignment="Center">
                                <Hyperlink x:Name="RegisterLink"
                                         Click="RegisterLink_Click"
                                         TextDecorations="None">
                                    <Hyperlink.Style>
                                        <Style TargetType="Hyperlink">
                                            <Setter Property="Foreground" Value="#00A3CC"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#00D4FF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Hyperlink.Style>
                                    <Run Text="Créala ahora" FontSize="13" FontWeight="Bold"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>