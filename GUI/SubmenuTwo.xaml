<UserControl x:Class="GUI.SubmenuTwo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignWidth="600" Height="430">

    <UserControl.Resources>

        <!--// Button Style //-->
        <Style x:Key="UpdateButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource FontStyle_2}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="20,8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#42A5F5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--// TextBox Style - SIN Template personalizado //-->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="BorderBrush" Value="#BBDEFB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource FontStyle_2}"/>
            <Setter Property="CaretBrush" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--// PasswordBox Style - SIN Template personalizado //-->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="BorderBrush" Value="#BBDEFB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource FontStyle_2}"/>
            <Setter Property="CaretBrush" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--// Wrapper Style para bordes redondeados //-->
        <Style x:Key="RoundedBorderWrapper" TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

    </UserControl.Resources>

    <Border Background="#E3F2FD"
            CornerRadius="10"
            Padding="20"
            Margin="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--// Header //-->
            <Border Grid.Row="0"
                    Background="White"
                    CornerRadius="8"
                    Padding="15,10"
                    Margin="0,0,0,20">

                <Grid>
                    <Border Background="#2196F3"
                            CornerRadius="5"
                            Padding="15,5"
                            HorizontalAlignment="Left">
                        <TextBlock Text="SEGURIDAD"
                                   FontSize="16"
                                   FontFamily="{StaticResource FontStyle_2}"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>

            <!--// Content //-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--// Cambiar Contraseña //-->
                <Border Grid.Column="0"
                        Background="#FFFFFF"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Border Background="#2196F3"
                                    CornerRadius="50"
                                    Width="60"
                                    Height="60"
                                    HorizontalAlignment="Center">

                                <Image Source="/Assets/CambiarContraseña.png"  />
                            </Border>
                        </Grid>

                        <TextBlock Text="Cambiar Contraseña"
                                   FontSize="18"
                                   FontFamily="{StaticResource FontStyle_2}"
                                   Foreground="#1976D2"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Nueva Contraseña"
                                   FontSize="12"
                                   FontFamily="{StaticResource FontStyle_2}"
                                   Foreground="#64B5F6"
                                   Margin="0,0,0,5"/>

                        <Grid Margin="0,0,0,15">
                            <PasswordBox x:Name="PasswordBox_Password"
                                       Style="{StaticResource ModernPasswordBoxStyle}"
                                       Height="35"/>

                            <TextBox x:Name="TextBox_Password"
                                   Style="{StaticResource ModernTextBoxStyle}"
                                   Height="35"
                                   Visibility="Collapsed"
                                   Background="Transparent"
                                   Text="{Binding ElementName=PasswordBox_Password, Path=Password, Mode=OneWay}"/>

                            <Button x:Name="TogglePasswordVisibility"
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,5,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="TogglePasswordVisibility_Click">
                                <Button.Template>
                                    <ControlTemplate>
                                        <Grid>
                                            <!--// Ojo Cerrado //-->
                                            <Path x:Name="EyeClosed"
                                                  Data="M 12,15 Q 18,12 24,15 M 12,15 Q 18,18 24,15 M 15,14 L 15,12 M 21,14 L 21,12"
                                                  Stroke="#90CAF9"
                                                  StrokeThickness="1.5"
                                                  Stretch="Uniform"
                                                  Width="20"
                                                  Height="20"
                                                  Visibility="Visible"/>

                                            <!--// Ojo Abierto //-->
                                            <Path x:Name="EyeOpen"
                                                  Data="M 12,15 Q 18,10 24,15 Q 18,20 12,15 M 18,15 A 2,2 0 1,1 18,15.01"
                                                  Stroke="#2196F3"
                                                  StrokeThickness="1.5"
                                                  Fill="Transparent"
                                                  Stretch="Uniform"
                                                  Width="20"
                                                  Height="20"
                                                  Visibility="Collapsed"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <Button Content="ACTUALIZAR"
                                Style="{StaticResource UpdateButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Height="40"
                                Click="UpdatePassword_Click"/>
                    </StackPanel>
                </Border>

                <!--// Cambiar Usuario //-->
                <Border Grid.Column="2"
                        Background="#FFFFFF"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Border Background="#2196F3"
                                CornerRadius="50"
                                Width="60"
                                Height="60"
                                HorizontalAlignment="Center">

                                <Image Source="/Assets/cambio.png" 
                                   Width="30" 
                                   Height="30"
                                   Stretch="Uniform"/>

                            </Border>
                        </Grid>

                        <TextBlock Text="Cambiar Usuario"
                                   FontSize="18"
                                   FontFamily="{StaticResource FontStyle_2}"
                                   Foreground="#1976D2"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Nuevo Usuario"
                                   FontSize="12"
                                   FontFamily="{StaticResource FontStyle_2}"
                                   Foreground="#64B5F6"
                                   Margin="0,0,0,5"/>

                        <TextBox x:Name="TextBox_Username"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Height="35"
                                 Margin="0,0,0,15"/>

                        <Button Content="ACTUALIZAR"
                                Style="{StaticResource UpdateButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Height="40"
                                Click="UpdateUsername_Click"/>
                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
    </Border>

</UserControl>