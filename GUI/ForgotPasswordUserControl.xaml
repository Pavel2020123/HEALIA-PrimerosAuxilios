<UserControl x:Class="GUI.ForgotPasswordUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="900" Height="550">

    <UserControl.Resources>
        <!-- Animación de entrada con rebote -->
        <Storyboard x:Key="EnterAnimation">
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="0.8" To="1" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="0.8" To="1" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.5"/>
        </Storyboard>

        <!-- Animación del candado (balanceo) -->
        <Storyboard x:Key="LockSwingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LockRotate"
                           Storyboard.TargetProperty="Angle"
                           From="-10" To="10" Duration="0:0:2"
                           AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Animación de pulso del candado -->
        <Storyboard x:Key="LockPulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LockScale"
                           Storyboard.TargetProperty="ScaleX"
                           From="1" To="1.1" Duration="0:0:1.5"
                           AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LockScale"
                           Storyboard.TargetProperty="ScaleY"
                           From="1" To="1.1" Duration="0:0:1.5"
                           AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Animación de partículas -->
        <Storyboard x:Key="ParticleAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Particle1"
                           Storyboard.TargetProperty="Opacity"
                           From="0.1" To="0.3" Duration="0:0:4"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="Particle2"
                           Storyboard.TargetProperty="Opacity"
                           From="0.2" To="0.4" Duration="0:0:5"
                           AutoReverse="True" BeginTime="0:0:1"/>
        </Storyboard>

        <!-- Animación de brillo -->
        <Storyboard x:Key="ShineAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ShineTransform"
                           Storyboard.TargetProperty="X"
                           From="-200" To="600" Duration="0:0:3"
                           BeginTime="0:0:2"/>
        </Storyboard>

        <!-- Animación de ondas -->
        <Storyboard x:Key="WaveAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="Wave1"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1" To="1.5" Duration="0:0:3"/>
            <DoubleAnimation Storyboard.TargetName="Wave1"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1" To="1.5" Duration="0:0:3"/>
            <DoubleAnimation Storyboard.TargetName="Wave1"
                           Storyboard.TargetProperty="Opacity"
                           From="0.5" To="0" Duration="0:0:3"/>

            <DoubleAnimation Storyboard.TargetName="Wave2"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1" To="1.5" Duration="0:0:3"
                           BeginTime="0:0:1"/>
            <DoubleAnimation Storyboard.TargetName="Wave2"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1" To="1.5" Duration="0:0:3"
                           BeginTime="0:0:1"/>
            <DoubleAnimation Storyboard.TargetName="Wave2"
                           Storyboard.TargetProperty="Opacity"
                           From="0.5" To="0" Duration="0:0:3"
                           BeginTime="0:0:1"/>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource EnterAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource LockSwingAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource LockPulseAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ParticleAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource ShineAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource WaveAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <!-- Contenedor principal -->
    <Border x:Name="MainBorder" 
            CornerRadius="15" 
            Background="White"
            RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="60" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========== PANEL IZQUIERDO - BRANDING ========== -->
            <Border Grid.Column="0" 
                    CornerRadius="15,0,0,15"
                    ClipToBounds="True">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#C33764" Offset="0"/>
                        <GradientStop Color="#1D2671" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <!-- Partículas animadas -->
                    <Ellipse x:Name="Particle1" 
                             Width="300" Height="300"
                             Fill="#FF6B9D"
                             Opacity="0.1"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Margin="-100,-50,0,0">
                        <Ellipse.Effect>
                            <BlurEffect Radius="80"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <Ellipse x:Name="Particle2" 
                             Width="250" Height="250"
                             Fill="#4E54C8"
                             Opacity="0.15"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Bottom"
                             Margin="0,0,-80,-80">
                        <Ellipse.Effect>
                            <BlurEffect Radius="60"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <!-- Efecto de brillo -->
                    <Rectangle Width="100" Height="700" Opacity="0.1">
                        <Rectangle.RenderTransform>
                            <TranslateTransform x:Name="ShineTransform" X="-200"/>
                        </Rectangle.RenderTransform>
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="Transparent" Offset="0"/>
                                <GradientStop Color="White" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <!-- Contenido -->
                    <StackPanel VerticalAlignment="Center" 
                              HorizontalAlignment="Center"
                              Margin="40">

                        <!-- Candado animado con ondas -->
                        <Grid Width="180" Height="180" Margin="0,0,0,25">
                            <!-- Ondas expandiéndose -->
                            <Ellipse x:Name="Wave1"
                                   Width="120" Height="120"
                                   Stroke="#FF6B9D"
                                   StrokeThickness="3"
                                   Opacity="0"
                                   RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <Ellipse x:Name="Wave2"
                                   Width="120" Height="120"
                                   Stroke="#4E54C8"
                                   StrokeThickness="3"
                                   Opacity="0"
                                   RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <!-- Candado principal -->
                            <Border Width="120" Height="120"
                                    Background="White"
                                    CornerRadius="60"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="LockScale" ScaleX="1" ScaleY="1"/>
                                        <RotateTransform x:Name="LockRotate" Angle="0"/>
                                    </TransformGroup>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF6B9D" BlurRadius="50" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <Grid>
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#C33764" Offset="0"/>
                                                <GradientStop Color="#1D2671" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="🔒" 
                                             FontSize="50" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Título -->
                        <TextBlock Text="Cambiar Contraseña"
                                 FontSize="26"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 TextAlignment="Center"
                                 TextWrapping="Wrap"
                                 MaxWidth="350"
                                 Margin="0,0,0,8"
                                 LineHeight="32">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#FF6B9D" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- Línea decorativa -->
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20">
                            <Ellipse Width="8" Height="8" Fill="#FF6B9D" Margin="0,0,5,0"/>
                            <Rectangle Height="2" Width="120">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#FF6B9D" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </StackPanel>

                        <!-- Descripción -->
                        <TextBlock Text="Crea una nueva contraseña segura para tu cuenta"
                                 FontSize="14"
                                 Foreground="#FFB3D4"
                                 HorizontalAlignment="Center"
                                 TextAlignment="Center"
                                 TextWrapping="Wrap"
                                 MaxWidth="320"
                                 Margin="0,0,0,25"
                                 LineHeight="20"/>

                        <!-- Pasos -->
                        <StackPanel>
                            <!-- Paso 1 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="#FF6B9D33" 
                                      CornerRadius="8"
                                      Width="32" Height="32"
                                      Margin="0,0,12,0">
                                    <TextBlock Text="1" 
                                             FontSize="16" 
                                             FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Ingresa tu nombre de usuario"
                                         FontSize="12"
                                         Foreground="#FFB3D4"
                                         VerticalAlignment="Center"
                                         MaxWidth="250"
                                         TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Paso 2 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="#FF6B9D33" 
                                      CornerRadius="8"
                                      Width="32" Height="32"
                                      Margin="0,0,12,0">
                                    <TextBlock Text="2" 
                                             FontSize="16" 
                                             FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Verificaremos tu identidad"
                                         FontSize="12"
                                         Foreground="#FFB3D4"
                                         VerticalAlignment="Center"
                                         MaxWidth="250"
                                         TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Paso 3 -->
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#FF6B9D33" 
                                      CornerRadius="8"
                                      Width="32" Height="32"
                                      Margin="0,0,12,0">
                                    <TextBlock Text="3" 
                                             FontSize="16" 
                                             FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Establece tu nueva contraseña"
                                         FontSize="12"
                                         Foreground="#FFB3D4"
                                         VerticalAlignment="Center"
                                         MaxWidth="250"
                                         TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== PANEL DERECHO - FORMULARIO ========== -->
            <Grid Grid.Column="1">
                <!-- Patrón de fondo -->
                <Border CornerRadius="0,15,15,0" Opacity="0.02">
                    <Border.Background>
                        <DrawingBrush Viewport="0,0,20,20" ViewportUnits="Absolute" TileMode="Tile">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing Brush="#C33764">
                                    <GeometryDrawing.Geometry>
                                        <EllipseGeometry Center="10,10" RadiusX="1" RadiusY="1"/>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Border.Background>
                </Border>

                <!-- Botón cerrar -->
                <Button x:Name="CloseButton"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="35" Height="35"
                        Margin="0,15,15,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Panel.ZIndex="10"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="17.5">
                                            <TextBlock Text="✕" 
                                                     FontSize="18" 
                                                     FontWeight="Bold"
                                                     Foreground="#CCCCCC"
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF0F0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- ScrollViewer para contenido que puede ser largo -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                            Margin="0,60,0,0"
                            Padding="0,0,10,0">
                    <StackPanel Margin="45,0,35,30">

                        <!-- Título -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Recuperar Acceso"
                                     FontSize="24"
                                     FontWeight="Bold"
                                     Foreground="#1A1A1A"
                                     Margin="0,0,0,5"/>
                            <Rectangle Width="50" Height="3" 
                                     HorizontalAlignment="Left"
                                     Margin="0,0,0,8">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#C33764" Offset="0"/>
                                        <GradientStop Color="#1D2671" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock Text="Ingresa tu usuario y crea una nueva contraseña"
                                     FontSize="12"
                                     Foreground="#999999"
                                     TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Usuario -->
                        <TextBlock Text="NOMBRE DE USUARIO"
                                 FontSize="9"
                                 FontWeight="Bold"
                                 Foreground="#666666"
                                 Margin="0,0,0,6"/>
                        <Border BorderThickness="0,0,0,2"
                                Margin="0,0,0,15"
                                Background="Transparent">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="#C33764"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#FFF0F5" 
                                        CornerRadius="6"
                                        Padding="6"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="👤" FontSize="16"/>
                                </Border>
                                <TextBox x:Name="UsernameTextBox"
                                       Grid.Column="1"
                                       Height="32"
                                       VerticalContentAlignment="Center"
                                       FontSize="13"
                                       BorderThickness="0"
                                       Background="Transparent"
                                       Foreground="#1A1A1A"
                                       TextChanged="UsernameTextBox_TextChanged"/>
                            </Grid>
                        </Border>

                        <!-- Sección de contraseñas (inicialmente deshabilitada) -->
                        <StackPanel x:Name="PasswordSection" IsEnabled="False" Opacity="0.4">
                            <!-- Nueva Contraseña -->
                            <TextBlock Text="NUEVA CONTRASEÑA"
                                     FontSize="9"
                                     FontWeight="Bold"
                                     Foreground="#666666"
                                     Margin="0,0,0,6"/>
                            <Border BorderThickness="0,0,0,2"
                                    Margin="0,0,0,15"
                                    Background="Transparent">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#C33764"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="#FFF0F5" 
                                            CornerRadius="6"
                                            Padding="6"
                                            Margin="0,0,10,0">
                                        <TextBlock Text="🔑" FontSize="16"/>
                                    </Border>
                                    <PasswordBox x:Name="NewPasswordBox"
                                               Grid.Column="1"
                                               Height="32"
                                               VerticalContentAlignment="Center"
                                               FontSize="13"
                                               BorderThickness="0"
                                               Background="Transparent"/>
                                </Grid>
                            </Border>

                            <!-- Confirmar Contraseña -->
                            <TextBlock Text="CONFIRMAR CONTRASEÑA"
                                     FontSize="9"
                                     FontWeight="Bold"
                                     Foreground="#666666"
                                     Margin="0,0,0,6"/>
                            <Border BorderThickness="0,0,0,2"
                                    Margin="0,0,0,15"
                                    Background="Transparent">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#C33764"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="#FFF0F5" 
                                            CornerRadius="6"
                                            Padding="6"
                                            Margin="0,0,10,0">
                                        <TextBlock Text="🔐" FontSize="16"/>
                                    </Border>
                                    <PasswordBox x:Name="ConfirmPasswordBox"
                                               Grid.Column="1"
                                               Height="32"
                                               VerticalContentAlignment="Center"
                                               FontSize="13"
                                               BorderThickness="0"
                                               Background="Transparent"/>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Mensaje de estado -->
                        <Border x:Name="StatusMessage"
                                Background="#FFF0F5" 
                                CornerRadius="8" 
                                Padding="10"
                                Margin="0,0,0,15"
                                BorderThickness="1"
                                BorderBrush="#FFE0F0"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="StatusIcon"
                                         Text="ℹ️" 
                                         FontSize="14" 
                                         Margin="0,0,8,0"
                                         VerticalAlignment="Top"/>
                                <TextBlock x:Name="StatusText"
                                         Text="Ingresa tu usuario para continuar"
                                         FontSize="10"
                                         Foreground="#C33764"
                                         TextWrapping="Wrap"
                                         LineHeight="14"/>
                            </StackPanel>
                        </Border>

                        <!-- Botón Cambiar Contraseña -->
                        <Button x:Name="ChangePasswordButton"
                              Height="44"
                              FontSize="12"
                              FontWeight="Bold"
                              Foreground="White"
                              BorderThickness="0"
                              Cursor="Hand"
                              Margin="0,0,0,15"
                              IsEnabled="False"
                              Click="ChangePasswordButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" CornerRadius="8">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#C33764" Offset="0"/>
                                                            <GradientStop Color="#1D2671" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#C33764" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                                    </Border.Effect>
                                                    <Grid>
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"
                                                                        Margin="0,0,25,0"/>
                                                        <TextBlock Text="→" 
                                                                 FontSize="18" 
                                                                 FontWeight="Bold"
                                                                 HorizontalAlignment="Right"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,15,0"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="RenderTransform">
                                                            <Setter.Value>
                                                                <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Content" Value="CAMBIAR CONTRASEÑA"/>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Volver al login -->
                        <Border Background="#F8F8FC" 
                                CornerRadius="8" 
                                Padding="10,8"
                                BorderThickness="1"
                                BorderBrush="#E8E8F0">
                            <StackPanel Orientation="Horizontal"
                                      HorizontalAlignment="Center">
                                <TextBlock Text="← " 
                                         FontSize="13"
                                         Foreground="#666666"
                                         VerticalAlignment="Center"
                                         FontWeight="Bold"/>
                                <TextBlock VerticalAlignment="Center">
                                    <Hyperlink x:Name="BackLink"
                                             Click="BackLink_Click"
                                             TextDecorations="None">
                                        <Hyperlink.Style>
                                            <Style TargetType="Hyperlink">
                                                <Setter Property="Foreground" Value="#C33764"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Foreground" Value="#1D2671"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Hyperlink.Style>
                                        <Run Text="Volver al inicio de sesión" FontSize="12" FontWeight="SemiBold"/>
                                    </Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</UserControl>