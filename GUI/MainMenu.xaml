<UserControl x:Class="GUI.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="700" 
             d:DesignWidth="980">
    <UserControl.Resources>

        <BitmapImage x:Key="Hamburger_Image"
             UriSource="/Assets/H.png"/>

        <!--// Reset Control Button Style Template //-->
        <Style x:Key="ResetBtnStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                             Background="#1976D2"
                             CornerRadius="8"
                             BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#1976D2" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#42A5F5"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>

        <!--// Active Menu Indicator //-->
        <Border x:Name="Menu_Status"
         Width="210"
         Height="60"
         Background="#E3F2FD"
         CornerRadius="12"
         VerticalAlignment="Top"
         HorizontalAlignment="Left"
         Margin="20,20,0,0">

            <Border.Effect>
                <DropShadowEffect Color="#2196F3" BlurRadius="12" ShadowDepth="0" Opacity="0.25"/>
            </Border.Effect>

            <Border.RenderTransform>
                <TranslateTransform X="0" Y="-100"/>
            </Border.RenderTransform>

            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Menu_Status"
                                      Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                      From="-200"
                                      To="0"
                                      BeginTime="0:0:0.4"
                                      Duration="0:0:0.6"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <Grid>
                <!--// Panel Name //-->
                <Border Height="20"
                 Width="160"
                 Background="#2196F3"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center"
                 CornerRadius="6,6,0,0"
                 Margin="0,2,0,0">

                    <TextBlock Text="ESTADO DE NAVEGACIÓN"
                             FontSize="11"
                             FontFamily="{StaticResource FontStyle_1}"
                             Foreground="#FFFFFF"
                             TextAlignment="Center"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             FontWeight="SemiBold"
                             Margin="0,1,0,0"/>
                </Border>

                <Grid>
                    <Border Height="30"
                     Background="#FFFFFF"
                     Width="95"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     CornerRadius="4,10,10,10"
                     Margin="6,0,0,5">

                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="1" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid>
                            <Rectangle x:Name="SideBar_Active"
                                Height="4"
                                Width="20"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Fill="#2196F3"
                                RadiusX="2"
                                RadiusY="2"/>

                            <TextBlock x:Name="SideBarText"
                                Text="MENÚ"
                                Foreground="#1976D2"
                                FontSize="11"
                                FontFamily="{StaticResource FontStyle_1}"
                                FontWeight="SemiBold"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,8"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid>
                    <Border Height="30"
                     Background="#FFFFFF"
                     Width="95"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     CornerRadius="10,4,10,10"
                     Margin="0,0,6,5">

                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="1" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid>
                            <Rectangle x:Name="SidePanel_Active"
                                Height="4"
                                Width="20"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Fill="#2196F3"
                                RadiusX="2"
                                RadiusY="2"/>

                            <TextBlock x:Name="SidePanelText"
                                Text="DATOS"
                                Foreground="#1976D2"
                                TextAlignment="Center"
                                FontSize="11"
                                FontWeight="SemiBold"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource FontStyle_1}"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,8"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!--// SideBar and SidePanel Container //-->
        <Grid x:Name="Menu_Container"
              Width="50"
              HorizontalAlignment="Left"
              Background="Transparent"
              Margin="20,95,0,95" 
              Grid.RowSpan="2">

            <Grid.RenderTransform>
                <TranslateTransform X="-80" Y="0"/>
            </Grid.RenderTransform>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="Border.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="Menu_Container"
                                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                                             From="-80"
                                             To="0"
                                             BeginTime="0:0:1.2"
                                             Duration="0:0:0.2"/>

                            <Storyboard>
                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="SideBar_Active"
                                                              Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                              BeginTime="0:0:8.5"
                                                              Duration="0:0:1.4"
                                                              FillBehavior="HoldEnd"
                                                              RepeatBehavior="Forever">
                                    <ColorAnimationUsingKeyFrames.KeyFrames>
                                        <DiscreteColorKeyFrame KeyTime="0:0:0" Value="#2196F3"/>
                                        <DiscreteColorKeyFrame KeyTime="0:0:0.1" Value="#90CAF9"/>
                                        <DiscreteColorKeyFrame KeyTime="0:0:0.25" Value="#2196F3"/>
                                        <DiscreteColorKeyFrame KeyTime="0:0:0.3" Value="#90CAF9"/>
                                    </ColorAnimationUsingKeyFrames.KeyFrames>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>

            <!--// Menu Slide Out Panel //-->
            <Border x:Name="Menu_Sliding_Panel"
                    Background="#E3F2FD"
                    BorderBrush="#2196F3"
                    BorderThickness="0,0,0,4"
                    CornerRadius="10"
                    HorizontalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect Color="#2196F3" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
                </Border.Effect>
            </Border>

            <Grid>
                <!--// Hamburger Toggle Button //-->
                <ToggleButton x:Name="Menu_ToggleButton"
                              Height="50"
                              Width="50"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              Margin="0,0,0,0">
                    <Image Source="{StaticResource Hamburger_Image}" Stretch="None"/>
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border"
                                                Margin="7"
                                                CornerRadius="6"
                                                Cursor="Hand">
                                            <ContentPresenter/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="ToggleButton.IsMouseOver" Value="true">
                                                <Setter Property="Background" TargetName="border" Value="#2196F3"/>
                                            </Trigger>

                                            <Trigger Property="ToggleButton.IsChecked" Value="true">
                                                <Setter Property="Background" TargetName="border" Value="#2196F3"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>

                    <ToggleButton.Resources>
                        <!--// Menu Active / Inactive Status Indicator //-->
                        <Storyboard x:Key="SideBar_Activated">
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="SideBar_Active"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          BeginTime="0:0:0"
                                                          Duration="0:0:1.4"
                                                          FillBehavior="HoldEnd"
                                                          RepeatBehavior="Forever">
                                <ColorAnimationUsingKeyFrames.KeyFrames>
                                    <DiscreteColorKeyFrame KeyTime="0:0:0" Value="#2196F3"/>
                                    <DiscreteColorKeyFrame KeyTime="0:0:0.1" Value="#90CAF9"/>
                                    <DiscreteColorKeyFrame KeyTime="0:0:0.25" Value="#2196F3"/>
                                    <DiscreteColorKeyFrame KeyTime="0:0:0.3" Value="#90CAF9"/>
                                </ColorAnimationUsingKeyFrames.KeyFrames>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>

                        <Storyboard x:Key="SideBar_Deactivated">
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="SideBar_Active"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          FillBehavior="Stop"/>
                        </Storyboard>

                        <Storyboard x:Key="SidePanel_Activated">
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="SidePanel_Active"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          BeginTime="0:0:0"
                                                          Duration="0:0:1.4"
                                                          FillBehavior="HoldEnd"
                                                          RepeatBehavior="Forever">
                                <ColorAnimationUsingKeyFrames.KeyFrames>
                                    <DiscreteColorKeyFrame KeyTime="0:0:0" Value="#2196F3"/>
                                    <DiscreteColorKeyFrame KeyTime="0:0:0.1" Value="#90CAF9"/>
                                    <DiscreteColorKeyFrame KeyTime="0:0:0.25" Value="#2196F3"/>
                                    <DiscreteColorKeyFrame KeyTime="0:0:0.3" Value="#90CAF9"/>
                                </ColorAnimationUsingKeyFrames.KeyFrames>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>

                        <Storyboard x:Key="SidePanel_Deactivated">
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="SidePanel_Active"
                                                          Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)"
                                                          FillBehavior="Stop"/>
                        </Storyboard>
                    </ToggleButton.Resources>

                    <ToggleButton.Triggers>
                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="Menu_Container"
                                                     Storyboard.TargetProperty="Width"
                                                     From="50"
                                                     To="210"
                                                     DecelerationRatio="0.6"
                                                     Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="Menu_Container"
                                                     Storyboard.TargetProperty="Width"
                                                     From="210"
                                                     To="50"
                                                     DecelerationRatio="0.9"
                                                     Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard Storyboard="{StaticResource SidePanel_Activated}"/>
                            <BeginStoryboard Storyboard="{StaticResource SideBar_Deactivated}"/>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            <BeginStoryboard Storyboard="{StaticResource SidePanel_Deactivated}"/>
                            <BeginStoryboard Storyboard="{StaticResource SideBar_Activated}"/>
                        </EventTrigger>
                    </ToggleButton.Triggers>
                </ToggleButton>

                <!--// SidePanel Header //-->
                <Border Height="32"
                        Width="150"
                        Background="#FFFFFF"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,9,52,0"
                        CornerRadius="6">

                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="1" Opacity="0.1"/>
                    </Border.Effect>

                    <Border Width="65"
                            Background="#2196F3"
                            HorizontalAlignment="Left"
                            Margin="10,0,0,0"
                            CornerRadius="5"
                            BorderBrush="#1976D2"
                            BorderThickness="0,3,0,3">

                        <TextBlock Text="Menu"
                                   FontFamily="{StaticResource FontStyle_1}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#FFFFFF"/>
                    </Border>
                </Border>

                <!--// Add SideBar UserControl //-->
                <StackPanel x:Name="SideBar_Container"
                            Margin="0,50,0,0"
                            Panel.ZIndex="1">
                    <local:SideBar/>
                </StackPanel>

                <!--// Add SidePanel UserControl //-->
                <StackPanel x:Name="SidePanel_Container"
                            Margin="0,50,-50,0">
                    <local:SidePanel x:Name="SidePanel_UC"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
