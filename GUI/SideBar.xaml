<UserControl x:Class="GUI.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="290"
             d:DesignWidth="200">
    <UserControl.Resources>

        <Style x:Key="SideBarStyle"
               TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Height="40"
                                Width="50"
                                Background="#BBDEFB"
                                HorizontalAlignment="Right"
                                SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="ToggleButton.IsMouseOver"
                                     Value="true">
                                <Setter Property="Background"
                                        TargetName="border">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0.5"
                                                             EndPoint="0.05,0.5">
                                            <GradientStop Color="#FFFFFF"
                                                          Offset="1" />
                                            <GradientStop Color="#BBDEFB"
                                                          Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="ToggleButton.IsChecked"
                                     Value="true">
                                <Setter Property="Background"
                                        TargetName="border">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0.5"
                                                             EndPoint="0.05,0.5">
                                            <GradientStop Color="#2196F3"
                                                          Offset="1" />
                                            <GradientStop Color="#BBDEFB"
                                                          Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SideBarListBoxItemStyle"
               TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <ToggleButton IsChecked="{Binding Path=IsSelected, RelativeSource={RelativeSource TemplatedParent}}"
                                      Style="{StaticResource SideBarStyle}">
                            <Image Source="{TemplateBinding Image.Source}"
                               Width="24"  Height="24"
                               Stretch="Uniform" />
                        </ToggleButton>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <StackPanel x:Name="SideBar_SP"
                        Background="Transparent"
                        Height="290"
                        VerticalAlignment="Top"
                        Width="50"
                        HorizontalAlignment="Right">

                <StackPanel.Resources>
                    <Style x:Key="Popup_Style"
                           TargetType="Popup">
                        <Setter Property="Placement"
                                Value="Right" />
                        <Setter Property="HorizontalOffset"
                                Value="10" />
                        <Setter Property="VerticalOffset"
                                Value="4" />
                        <Setter Property="AllowsTransparency"
                                Value="True" />
                        <Setter Property="PopupAnimation"
                                Value="Fade" />
                    </Style>
                </StackPanel.Resources>

                <ListBox Height="290">
                    <ListBox.Resources>
                        <Style TargetType="ListBox">
                            <Setter Property="VerticalAlignment"
                                    Value="Top" />
                            <Setter Property="SelectionMode"
                                    Value="Single" />
                            <Setter Property="Cursor"
                                    Value="Hand" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Border Background="Transparent"
                                                SnapsToDevicePixels="True">
                                            <ScrollViewer Focusable="False"
                                                          HorizontalScrollBarVisibility="Disabled"
                                                          VerticalScrollBarVisibility="Disabled">
                                                <ItemsPresenter />
                                            </ScrollViewer>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>

                    <ListBoxItem x:Name="SideBar_Dashboard_ListBoxItem">
                        <ListBoxItem.Style>
                            <Style TargetType="ListBoxItem"
                                   BasedOn="{StaticResource SideBarListBoxItemStyle}">
                                <Setter Property="Image.Source"
                                        Value="{StaticResource Dashboard_S3}" />
                            </Style>
                        </ListBoxItem.Style>
                    </ListBoxItem>

                    <ListBoxItem x:Name="SideBar_Mail_ListBoxItem">
                        <ListBoxItem.Style>
                            <Style TargetType="ListBoxItem"
                                   BasedOn="{StaticResource SideBarListBoxItemStyle}">
                                <Setter Property="Image.Source"
                                        Value="{StaticResource Analytics_S3}" />
                            </Style>
                        </ListBoxItem.Style>
                    </ListBoxItem>

                    <ListBoxItem x:Name="SideBar_Customer_ListBoxItem">
                        <ListBoxItem.Style>
                            <Style TargetType="ListBoxItem"
                                   BasedOn="{StaticResource SideBarListBoxItemStyle}">
                                <Setter Property="Image.Source"
                                        Value="{StaticResource Customer_S3}" />
                            </Style>
                        </ListBoxItem.Style>
                    </ListBoxItem>

                    <!-- ⭐ MAPA (NUEVO) -->
                    <ListBoxItem x:Name="SideBar_Map_ListBoxItem">
                        <ListBoxItem.Style>
                            <Style TargetType="ListBoxItem"
                                   BasedOn="{StaticResource SideBarListBoxItemStyle}">
                                <!-- Usa el mismo icono de Analytics o crea uno propio para mapa -->
                                <Setter Property="Image.Source"
                                        Value="{StaticResource mapa_S3}" />
                            </Style>
                        </ListBoxItem.Style>
                    </ListBoxItem>

                </ListBox>

                <Popup x:Name="dashboard_tt"
                       IsOpen="{Binding ElementName=SideBar_Dashboard_ListBoxItem, Path=IsMouseOver, Mode=OneWay}"
                       PlacementTarget="{Binding ElementName=SideBar_Dashboard_ListBoxItem}"
                       Style="{StaticResource Popup_Style}">

                    <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="0,0,0,3" CornerRadius="5" Padding="10,5">
                        <TextBlock Text="INICIO" 
                                   Foreground="#1976D2" 
                                   FontSize="14" 
                                   FontFamily="{StaticResource FontStyle_1}"/>
                    </Border>
                </Popup>

                <Popup x:Name="mail_tt"
                       IsOpen="{Binding ElementName=SideBar_Mail_ListBoxItem, Path=IsMouseOver, Mode=OneWay}"
                       PlacementTarget="{Binding ElementName=SideBar_Mail_ListBoxItem}"
                       Style="{StaticResource Popup_Style}">

                    <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="0,0,0,3" CornerRadius="5" Padding="10,5">
                        <TextBlock Text="CHAT" 
                                   Foreground="#1976D2" 
                                   FontSize="14" 
                                   FontFamily="{StaticResource FontStyle_1}"/>
                    </Border>
                </Popup>

                <Popup x:Name="customer_tt"
                       IsOpen="{Binding ElementName=SideBar_Customer_ListBoxItem, Path=IsMouseOver, Mode=OneWay}"
                       PlacementTarget="{Binding ElementName=SideBar_Customer_ListBoxItem}"
                       Style="{StaticResource Popup_Style}">

                    <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="0,0,0,3" CornerRadius="5" Padding="10,5">
                        <TextBlock Text="PERFIL" 
                                   Foreground="#1976D2" 
                                   FontSize="14" 
                                   FontFamily="{StaticResource FontStyle_1}"/>
                    </Border>
                </Popup>

                <!-- ⭐ TOOLTIP MAPA (NUEVO) -->
                <Popup x:Name="map_tt"
                       IsOpen="{Binding ElementName=SideBar_Map_ListBoxItem, Path=IsMouseOver, Mode=OneWay}"
                       PlacementTarget="{Binding ElementName=SideBar_Map_ListBoxItem}"
                       Style="{StaticResource Popup_Style}">

                    <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="0,0,0,3" CornerRadius="5" Padding="10,5">
                        <TextBlock Text="MAPA" 
                                   Foreground="#1976D2" 
                                   FontSize="14" 
                                   FontFamily="{StaticResource FontStyle_1}"/>
                    </Border>
                </Popup>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
