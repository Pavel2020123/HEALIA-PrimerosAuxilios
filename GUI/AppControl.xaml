<UserControl x:Class="GUI.AppControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <UserControl.Resources>

        <Style x:Key="ControlBtnStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="8"
                                BorderThickness="0"
                                Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#90CAF9"/>
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" TargetName="border" Value="0.5,0.5"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#64B5F6"/>
                                <Setter Property="RenderTransform" TargetName="border">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <!-- 🎯 BARRA HORIZONTAL ARRIBA A LA DERECHA -->
        <Border x:Name="Control_Header"
                Height="50"
                Width="140"
                Background="#2196F3"
                Margin="0,20,20,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                CornerRadius="25"
                BorderBrush="#FFFFFF"
                BorderThickness="2">

            <Border.Effect>
                <DropShadowEffect Color="#2196F3" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            </Border.Effect>

            <Border.RenderTransform>
                <TranslateTransform X="200" Y="0"/>
            </Border.RenderTransform>

            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- Animación de entrada desde la derecha -->
                            <DoubleAnimation Storyboard.TargetName="Control_Header"
                                           Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                                           From="200"
                                           To="0"
                                           BeginTime="0:0:3.2"
                                           Duration="0:0:0.5">
                                <DoubleAnimation.EasingFunction>
                                    <CircleEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>

                            <!-- Fade in -->
                            <DoubleAnimation Storyboard.TargetName="Control_Header"
                                           Storyboard.TargetProperty="Opacity"
                                           From="0"
                                           To="1"
                                           BeginTime="0:0:3.2"
                                           Duration="0:0:0.5"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <Grid>
                <Border Margin="6"
                        CornerRadius="20"
                        Background="#E3F2FD">

                    <!-- ⭐ BOTONES EN LÍNEA HORIZONTAL -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                        <!--// Minimize //-->
                        <Button x:Name="App_Minimize"
                                Width="36"
                                Height="36"
                                Margin="4,0"
                                Style="{StaticResource ControlBtnStyle}"
                                Click="App_Minimize_Click"
                                ToolTip="Minimizar">
                            <Image Source="{StaticResource Minimize_01}"
                                   Stretch="Uniform" 
                                   Width="18"
                                   Height="18"/>
                        </Button>

                        <!--// Maximize //-->
                        <Button x:Name="App_Maximize"
                                Width="36"
                                Height="36"
                                Margin="4,0"
                                Style="{StaticResource ControlBtnStyle}"
                                Click="App_Maximize_Click"
                                ToolTip="Maximizar">
                            <Image Source="{StaticResource Maximize_01}"
                                   Stretch="Uniform"
                                   Width="18"
                                   Height="18"/>
                        </Button>

                        <!--// Close //-->
                        <Button x:Name="App_ShutDown"
                                Width="36"
                                Height="36"
                                Margin="4,0"
                                Style="{StaticResource ControlBtnStyle}"
                                Click="App_ShutDown_Click"
                                ToolTip="Cerrar">
                            <Image Source="{StaticResource Close_01}"
                                   Stretch="Uniform"
                                   Width="18"
                                   Height="18"/>
                        </Button>

                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
